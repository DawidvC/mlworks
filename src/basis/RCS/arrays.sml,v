signature ARRAY =
  sig
    type 'a array
    type 'a vector

    val maxlen      : int

    val array       : int * '_a -> '_a array
    val tabulate    : int * (int -> '_a) -> '_a array
    val arrayoflist : '_a list -> '_a array
    val array0      : 'a array

    val length      : 'a array -> int
    val sub         : 'a array * int -> 'a
    val update      : 'a array * int * 'a -> unit
    val extract     : ('a array * int * int) -> 'a vector
  end
@
