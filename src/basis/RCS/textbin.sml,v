require "toplevel";
require "integer";
require "imperative_io";
require "__word8";
require "__word8vector";

signature STANDARD_IO =
  sig
     include IMPERATIVE_IO
     structure Position : INTEGER
     val openIn : string -> instream
     val openOut: string -> outstream
     val openAppend: string -> outstream
     val stdIn : instream
     val stdOut: outstream
     val stdErr: outstream
  end

signature BIN_IO =
   STANDARD_IO where type StreamIO.elem = Word8.word 
                     and StreamIO.vector = Word8Vector.vector

signature TEXT_IO =
  sig
    include STANDARD_IO where type StreamIO.elem = char
                              and StreamIO.vector = string
    structure BinIO : BIN_IO
    val inputLine : instream -> string
(*
    val translateIn: BinIO.StreamIO.PrimIO.reader -> 
      StreamIO.PrimIO.reader
    val translateOut: BinIO.StreamIO.PrimIO.writer -> 
      StreamIO.PrimIO.writer
*)
  end
@


