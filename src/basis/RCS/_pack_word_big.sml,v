a35 2

require "__word8";
d38 1
a47 2
     structure Word = Word

d58 15
a72 12
     type vector = Word8Vector.vector
     type array = Word8Array.array
     type word = Word.word

     val bytesPerWord : int = (wordSize div 8)

     val isBig : bool = true

     val subv : (vector * int) -> word           = env "sub"
     val sub  : (array * int) -> word            = env "sub"
     val update : (array * int * word) -> unit   = env "update"
   end;
@
