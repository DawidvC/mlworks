(* Tyname_id's, Tyfun_id's, and Strname_id's are all defined to ensure
uniqueness of typenames, type functions, and structure names. These
are all actually defined in datatypes.sml. Since any of these can be
incomplete in early stages of typechecking, they are not given
definite id's until they have been fully resolved. This module
provides functions for dealing with those id's. *)

require "../utils/mononewmap";

signature TYNAME_ID  =
  sig 
    structure Map : MONONEWMAP
    eqtype Tyname_id
    sharing type Tyname_id = Map.object
    val make_tyname_n : int -> Tyname_id
    val make_tyname_id : unit -> Tyname_id
    val tyname_id : Tyname_id -> int
    val tyname_id_lt : (Tyname_id * Tyname_id) -> bool
    val tyname_id_eq : Tyname_id * Tyname_id -> bool
    val reset_counter : int -> unit
    val read_counter : unit -> int
    val push_counter : unit -> unit
    val pop_counter : unit -> unit
  end;

signature TYFUN_ID  =
  sig 
    structure Map : MONONEWMAP
    eqtype Tyfun_id
    sharing type Tyfun_id = Map.object
    val make_tyfun_n : int -> Tyfun_id
    val make_tyfun_id : unit -> Tyfun_id
    val tyfun_id : Tyfun_id -> int
    val tyfun_id_lt : (Tyfun_id * Tyfun_id) -> bool
    val string_tyfun_id : Tyfun_id -> string
    val reset_counter : int -> unit
    val read_counter : unit -> int
    val push_counter : unit -> unit
    val pop_counter : unit -> unit
  end;

signature STRNAME_ID  =
  sig 
    structure Map : MONONEWMAP
    eqtype Strname_id
    sharing type Strname_id = Map.object
    val make_strname_n : int -> Strname_id
    val make_strname_id : unit -> Strname_id
    val string_strname_id : Strname_id -> string
    val strname_id : Strname_id -> int
    val strname_id_lt : (Strname_id * Strname_id) -> bool
    val reset_counter : int -> unit
    val read_counter : unit -> int
    val push_counter : unit -> unit
    val pop_counter : unit -> unit
  end;
@


