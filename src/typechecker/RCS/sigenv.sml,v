(* a SigEnv is a signature environment, a 'G' as defined in the
Definition (page 31), a mapping from SigId's to Sigma's. This module
defines the type Sigenv and the functions that act upon it (all these
functions are simple and as described in the Definition. *)

require "basistypes";
require "../main/options";

signature SIGENV =
  sig
    structure BasisTypes : BASISTYPES
    structure Options : OPTIONS

    exception Lookup_SigId

    val empty_sigenv : BasisTypes.Sigenv
    val sigid_order : BasisTypes.Datatypes.Ident.SigId * BasisTypes.Datatypes.Ident.SigId -> bool
    val sigid_equal : BasisTypes.Datatypes.Ident.SigId * BasisTypes.Datatypes.Ident.SigId -> bool
    val add_to_sigenv : BasisTypes.Datatypes.Ident.SigId * BasisTypes.Sigma * BasisTypes.Sigenv -> BasisTypes.Sigenv
    val lookup : BasisTypes.Datatypes.Ident.SigId * BasisTypes.Sigenv -> BasisTypes.Sigma
    val sigenv_plus_sigenv : BasisTypes.Sigenv * BasisTypes.Sigenv -> BasisTypes.Sigenv 
    val string_sigenv : Options.print_options -> BasisTypes.Sigenv -> string
  end

@


