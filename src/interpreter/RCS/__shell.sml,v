structure Shell_ =
  Shell (structure Incremental = Incremental_
         structure InterPrint = InterPrint_
         structure IdentPrint = IdentPrint_
         structure Types = Types_
         structure Strenv = Strenv_
         structure Valenv = Valenv_
         structure Tyenv = Tyenv_
