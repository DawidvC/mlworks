require "../main/info";
require "../typechecker/basis";

signature STR_PRINT =
  sig
    structure Basis : BASIS
    structure Info: INFO

    sharing Info = Basis.Sigenv.Sigma.Nameset.Info
    val print_str : Info.options -> (Basis.Tyvarenv.Datatypes.Ident.StrId * Basis.Basis) -> string
    val print_exnenv : Info.options -> Basis.Tyvarenv.Datatypes.Valenv -> string
    val print_tyenv : Info.options -> Basis.Tyvarenv.Datatypes.Tyenv -> string
    val make_bound_tyvars : int -> Basis.Tyvarenv.Datatypes.Type list
  end
@


