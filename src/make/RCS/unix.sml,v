desc
@Interface to some UNIX functions in NJML
@


1.8
log
@New pervasive time structure.
@
text
@(* unix.sml the signature *)
(*
$Log: unix.sml,v $
Revision 1.7  1992/10/27  15:55:44  richard
Changes to pervasives and representation of time.

Revision 1.6  1992/08/07  14:26:53  davidt
Took out the system function, which is available in the
MLworks.System structure already.

Revision 1.5  1992/05/13  10:45:47  jont
Modified for two integer time stamps

Revision 1.4  1991/11/21  16:32:20  jont
Added copyright message

Revision 1.3  91/06/24  11:24:36  colin
Added date function

Revision 1.2  91/06/10  17:32:43  colin
added unix system call

Revision 1.1  91/06/07  11:05:52  colin
Initial revision

Copyright (c) 1991 Harlequin Ltd.
*)
signature UNIX =
  sig
    exception ParseEnviron
    val parse_environ : string -> string
    val username : unit -> string

    exception Home
    val home : string -> string
    val ctime : unit -> MLWorks.Time.time
    val date : unit -> string

    datatype mtime_res =
      EXISTS of MLWorks.Time.time |
      NOT_EXIST

    val mtime : string -> mtime_res
  end
@


