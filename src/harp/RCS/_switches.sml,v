require "switches";


functor Switches() : SWITCHES =

  struct

    (* Debugging information output *)

    val flow_debug		= ref false
    val expression_debug	= ref false
    val variable_debug		= ref false
    val registerallocator_debug	= ref false
    val registerallocator_graphs= ref false
    val substitute_debug        = ref false
    val stackallocator_debug    = ref false
    val comment_out		= ref false
    val listings		= ref false

    (* Control flow analysis *)

    val concatenate_blocks	= ref true
    val convert_branches	= ref true
    val convert_raises		= ref true

    (* Expression analysis *)

    val copy_propagation	= ref true
    val expression_substitution	= ref true

    (* Variable analysis *)

    val eliminate_useless	= ref true

  end
@


