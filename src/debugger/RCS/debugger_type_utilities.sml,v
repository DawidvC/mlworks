require "debugger_types";

signature DEBUGGER_TYPE_UTILITIES =
  sig
    structure Debugger_Types : DEBUGGER_TYPES

    val slim_down_a_type : Debugger_Types.Type -> Debugger_Types.Type

    val is_type_polymorphic : Debugger_Types.Type -> bool

    val generate_recipe :
      Debugger_Types.Type * Debugger_Types.Type * string * bool -> 
      Debugger_Types.Backend_Annotation * bool

    exception RecipeApplicationProblem of string

    val apply_recipe : Debugger_Types.Backend_Annotation  * Debugger_Types.Type
                             -> Debugger_Types.Type

    exception InValidMatch of string

    val check_type : Debugger_Types.Type * Debugger_Types.Type
                             -> Debugger_Types.Type

  end
@


