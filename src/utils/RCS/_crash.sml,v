text
@d3 4
a6 1
$Log:	_crash.sml,v $
d12 2
a13 1
require "print";
d16 1
a16 1
functor Crash (Print : PRINT) : CRASH =
d18 1
a18 1
    exception Crash
d21 1
a21 3
      (Print.print
       ("\nimpossible condition :\n" ^ message ^ "\n");
       raise Crash)
d24 2
a25 5
      (Print.print
       ("\nunimplemented facility :\n" ^ message ^ "\n");
       raise Crash)
  end

@


