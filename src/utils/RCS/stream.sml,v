desc
@Generic stream objects
@


1.2
log
@No longer used.
@
text
@NOT USED
(*  ==== GENERALISED STREAMS ====
 *
 *  Copyright (C) 1992 Harlequin Ltd
 *
 *  Description
 *  -----------
 *  This module provides functions on streams which are exactly like those
 *  specified in the Definition, except that in and outstreams can be
 *  constructed from any suitable set of functions.
 *
 *  Revision Log
 *  ------------
 *  $Log: stream.sml,v $
Revision 1.1  1992/10/26  15:24:07  matthew
Initial revision

 *)

signature STREAM =
  sig
    exception Io of string
    type instream
    val instream  : {input		: int -> string,
                     lookahead		: unit -> string,
                     end_of_stream	: unit -> bool,
                     clear_eof		: unit -> unit,
                     close_in		: unit -> unit} -> instream
    val open_in		: string -> instream
    val end_of_stream	: instream -> bool
    val input		: instream * int -> string
    val clear_eof	: instream -> unit
    val lookahead	: instream -> string
    val close_in	: instream -> unit

    val std_in          : instream

    type outstream
    val outstream : {output		: string -> unit,
                     flush_out		: unit -> unit,
                     close_out		: unit -> unit} -> outstream
    val open_out	: string -> outstream
    val output		: outstream * string -> unit
    val flush_out	: outstream -> unit
    val close_out	: outstream -> unit

    val std_out         : outstream
    val with_standard_output : outstream -> (unit -> 'a) -> 'a

  end;
@


