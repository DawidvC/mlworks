(* This functor is used throughout the compiler to provide a debug
message mechanism. For instance, many of the typechecker modules have
a debug substructure. The two functions provided are obvious. *)

functor Debug (): 
  sig val set_debug_level : int -> unit
    val debug_level : unit -> int
  end
  =
  struct
    local 
      val debug = ref 0
    in
      fun set_debug_level n = debug := n
      fun debug_level () =  ! debug
    end
  end
    
@


