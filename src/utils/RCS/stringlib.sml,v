@[Bug #1614]
remove toplevel String.
@
text
@(*  ==== UTILITIES : STRING LIBRARY ====
 *
 *  Copyright (C) 1995 Harlequin Ltd.
 *
 *  Description
 *  -----------
 *  This is a collection of items concerning strings that it was useful
 *  to group together.
 *
 *  This uses small naturals (0 <= char <= 255) as synonyms for characters
 *  (i.e. unsigned chars).
 *
 *
 *  Revision Log
 *  ------------
 *  $Log: stringlib.sml,v $
 * Revision 1.1  1995/03/30  11:56:19  brianm
 * new unit
 * New file.
 *
 *
 *)

signature STRING_LIB =
   sig

      val memstr : string -> char -> bool
          (* Given a string, return a predicate for checking
             membership of the string
           *)

      val squash : (char -> bool) * string -> string
          (* Remove all occurrences of characters satisfying predicate
             within string.
           *)

      val trim_left  : (char -> bool) * string -> string
          (*  Removes any prefix of first string consisting
           *  of characters satisfying predicate.
           *)

      val trim_right : (char -> bool) * string -> string
          (*  Removes any suffix of string consisting
           *  of characters satisfying predicate.
           *)

      val leading : (char -> bool) * string -> string
          (*  Gives the prefix of first string upto left-most occ. of
           *  a character satisfying predicate.
           *)

      val leading_split : (char -> bool) * string -> (string * string)
          (*  Gives the pair of prefix (and rest) of first string upto
           *  left-most occ. of a character satisfying predicate.
           *)

      val trailing : (char -> bool) * string -> string
          (*  Gives the suffix of string upto right-most occ. of
           *  any characters satisfying predicate.
           *)

      val trailing_split : (char -> bool) * string -> (string * string)
          (*  Gives the pair of rest and suffix of first string upto
           *  right-most occ. character satisfying predicate.
           *)

      val to_lower : string -> string
          (* Map given string to lower case *)

      val to_upper : string -> string
          (* Map given string to upper case *)

      val capitalise : (char -> bool) * string -> string
          (* Capitalise string i.e. make the first alphabetic
             character following any characters satisfying predicate.
             In addition, the first alphabetic character in the first string
             is capialised.

             All other alphabetic characters in string are mapped
             to lower-case.
           *)

      val is_lower_case : char -> bool
      val is_upper_case : char -> bool
      val is_digit      : char -> bool

      val is_letter     : char -> bool
      val is_alpha      : char -> bool

   end;

@


