  case SM_PROMOTE_ALL:
    { /* this should be called after SM_COLLECT_ALL */
      struct gen *parent, *child;
      double start, stop, time;

      ++ in_GC;
      start = user_clock();

      message_printed = 0;
      message_level = CINT(DEREF(gc_message_level));

      creation->top = GC_HEAP_START;
      (void)move_modified_list();
      think (CREATION_SIZE, do_stack_crawl);
      
      /* find the oldest generation */
      parent = creation;
      while(parent->parent != NULL)
	parent = parent->parent;

      child = parent->child;

      while (child != NULL) {
	size_t live = parent->top - parent->start;
	size_t free = parent->values - live;
	size_t required = child->top - child->start;
	if (required < free) {
	  /* promote child to parent */
	  gc_message(child->number, "promote %d ", child->number);
	  resize_gen(parent, live+required);
	  collect_gen(child, parent, child->number, do_stack_crawl);
	  resize_gen(parent, (unsigned int) (parent->top - parent->start));
	  child->collect = (float) 0;
	  if (child != creation)
	    resize_gen(child,0);
	} else
	  parent = child;
	child = child->child;
      }

      GC_HEAP_LIMIT = creation->end;
      GC_HEAP_START = creation->top;

      stop = user_clock();
      time = stop - start;
      gc_clock += time;
      gc_message_end(time,0);
      --in_GC;
      return (MLUNIT);
      break;
    }
  }
  errno = EIMPL;
  return(ERROR);
}
