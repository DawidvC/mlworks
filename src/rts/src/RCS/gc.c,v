#if 1
static gc_decl mlval *fix_c_roots(mlval *to)
{
  int i;

  DIAGNOSTIC(4, "fix_c_roots(to = 0x%X):", to, 0);

  for(i=0; i<root_table_size; ++i)
    if(roots[i] != NULL)
      fix(to, roots[i]);

  return(to);
}
