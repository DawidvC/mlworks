1.1
log
@new unit
@
text
@d1 1
a1 1
/*  ==== Common stuff for time_date ====
d3 8
a10 1
 *  Copyright (C) 1996 Harlequin Ltd.
a11 1
 *  $Log$
a19 1
#define getopt(x) ((ISORDPTR(x)) ? FIELD(x, 0) : 0)
d21 10
a30 49
static int trans_month(mlval ml_month)
{
  switch (CINT(ml_month)) {
  case 0:
    return 3;
  case 1:
    return 7;
  case 2:
    return 11;
  case 3:
    return 1;
  case 4:
    return 0;
  case 5:
    return 6;
  case 6:
    return 5;
  case 7:
    return 2;
  case 8:
    return 4;
  case 9:
    return 10;
  case 10:
    return 9;
  default:
    return 8;
  }
}

static int trans_wday(mlval ml_wday)
{
  switch (CINT(ml_wday)) {
  case 0:
    return 5;
  case 1:
    return 1;
  case 2:
    return 6;
  case 3:
    return 0;
  case 4:
    return 4;
  case 5:
    return 2;
  default:
    return 3;
  }
}
@
