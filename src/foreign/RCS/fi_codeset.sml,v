require "fi_types";

signature FOREIGN_CODESET =
   sig

     structure FITypes : FOREIGN_TYPES

     type name = FITypes.name  
     type filename = FITypes.filename

     type foreign_module
     type foreign_codeset

     datatype load_mode = IMMEDIATE_LM | DEFERRED_LM

     val load_codeset : filename * load_mode -> foreign_codeset
     val file_info : foreign_codeset -> (filename * load_mode)

     val files_loaded : unit -> filename list
     val symbols      : foreign_codeset -> name list

     datatype value_type = CODE_VT | VAR_VT | UNKNOWN_VT

     val symbol_info : foreign_codeset * name -> value_type

     val module : foreign_codeset -> foreign_module

   end;
@


