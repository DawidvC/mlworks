require "fi_types";

signature FOREIGN_STRUCTURE =
   sig

     structure FITypes : FOREIGN_TYPES

     type name
     type filename

       sharing type name       = FITypes.name  
       sharing type filename   = FITypes.filename

     type foreign_module
     type foreign_structure

     datatype load_mode = IMMEADIATE_LM | DEFERRED_LM

     val load_structure : filename * load_mode -> foreign_structure
     val file_info : foreign_structure -> (filename * load_mode)

     val files_loaded : unit -> filename list
     val symbols      : foreign_structure -> name list

     datatype value_type = CODE_VT | VAR_VT | NONE_VT

     val symbol_info : foreign_structure * name -> value_type

     val module : foreign_structure -> foreign_module

   end;
@


