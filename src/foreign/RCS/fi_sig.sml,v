require "../initbasis/__general";

signature FOREIGN_SIGNATURE =
   sig

     type ('a)option
       sharing type option = General.option

     type ('entry) foreign_signature


     (* foreign signature operations *)

     val new_sig      : unit -> 'entry foreign_signature

     val lookup_entry : 'entry foreign_signature * string -> ('entry)option
     val def_entry    : 'entry foreign_signature * (string * 'entry) -> unit
     val hide_entry   : 'entry foreign_signature * string -> unit

     val show_entries : 'entry foreign_signature -> (string * 'entry) list

   end; (* signature FOREIGN_SIGNATURE *)
@
