signature C_HEADER =
  sig

    structure FStruct : FOREIGN_STRUCT
    structure FHeader : FOREIGN_HEADER

    type mode
    type filename

    sharing type mode = FHeader.mode
    sharing type filename = FStruct.filename

    structure CData : C_DATA

    type c_type

    sharing type c_type = CData.T

    type foreign_signature
	 (* assume equal to: (c_type)FHeader.foreign_signature *)

    val load : filename * mode -> foreign_signature

  end; (* signature C_HEADER *)
xf
@
