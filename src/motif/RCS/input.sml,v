signature INPUT_WINDOW =
sig
  type Widget

  val create:
    Widget * string * Widget
    -> {instream: instream, input_widget: Widget, show_input: bool -> unit,
	clear_input: unit -> unit, input_visible: unit -> bool}
end;
@


