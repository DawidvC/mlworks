@(* Copyright (c) 1996 Harlequin Ltd.

Result: OK

 *
 * Test OS.Path.isCanonical.  All tests should return true.
 * 
 * Revision Log
 * ------------
 *
 * $Log$
 *)

Shell.Build.loadSource "unix.__os";

open OS.Path;

val a = isCanonical "" = false;

val b = isCanonical "./." = false;

val c = isCanonical "/." = false;

val d = isCanonical "..";

val e = isCanonical "../..";

val f = isCanonical "b";

val g = isCanonical "a/b";

val h = isCanonical "/a/b";

val i = isCanonical "a/b/" = false;

val j = isCanonical "a/b//" = false;

val k = isCanonical "a/../b" = false;

val l = isCanonical "a/.." = false;

val m = isCanonical "a/." = false;

val n = isCanonical "a/" = false;

val p = isCanonical "/a/../b/" = false;

val q = isCanonical "/.." = false;

val r = isCanonical "/../../a/b/" = false;

val s = isCanonical "/./../../a/b/" = false;

val t = isCanonical "/./../.." = false;

val u = isCanonical "a/../b" = false;

val v = isCanonical "a/./b" = false;

val w = isCanonical "a////b" = false;

val x = isCanonical "foo1//../..//foo2/bar.sml" = false;

val y = isCanonical "foo1.ext/./foo2/../bar.sml/" = false;

val z = isCanonical "//foo1/../../foo2/bar.sml" = false;
@
