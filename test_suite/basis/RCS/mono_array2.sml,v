 *  Revision Log
 *  ------------
 *  $Log:$
 *
*)

local
  val _ =  Shell.Options.set(Shell.Options.ValuePrinter.maximumStrDepth, 0);
in
  val _ =
    (Shell.Build.loadSource "basis._mono_array2";
     Shell.Build.loadSource "basis.__int")
end ;

  structure IntArray2 = MonoArray2(type elem = int)

  fun maken (n,m) = IntArray2.tabulate IntArray2.RowMajor (n,m,fn (i,j) =>i*m+j)

  fun allreg a = {base = a, row = 0, col = 0, nrows = NONE, ncols = NONE}

  fun mkreg (a, r, c, h, w) =
                {base = a, row = r, col = c, nrows = SOME h, ncols = SOME w}

  fun iprint a =
    let
      fun pad s = if size s < 3 then pad (" " ^ s) else s
      fun one (i,j,n) =
        print ((if j = 0 then "\n" else "") ^ pad (Int.toString n) ^ " ")
    in
      IntArray2.appi IntArray2.RowMajor one (allreg a);
      print "\n"
    end;

  val _ = 
    let
      val i = ref (~1)
      val a = IntArray2.tabulate IntArray2.RowMajor
                 (4, 6, (fn _ => (i:= !i+1; !i)))
      val b = IntArray2.tabulate IntArray2.RowMajor 
                 (4, 6, (fn (a,_) => (a)))
      val c = IntArray2.tabulate IntArray2.ColMajor 
                 (4, 6, (fn (_,a) => (a)))
    in
      print "tabulate RowMajor\n";
      iprint a ; iprint b ; iprint c
    end

  val _ = 
    let
      val i = ref (~1)
      val a = IntArray2.tabulate IntArray2.ColMajor 
                 (4, 6, (fn _ => (i:= !i+1; !i)))
      val b = IntArray2.tabulate IntArray2.ColMajor 
                 (4, 6, (fn (a,_) => (a)))
      val c = IntArray2.tabulate IntArray2.ColMajor 
                 (4, 6, (fn (_,a) => (a)))
    in
      print "tabulate ColMajor \n";
      iprint a ; iprint b ; iprint c
    end
  

  fun copytest (a,b,c,d,e,f) =
    let val arr = maken (6,8)
    in
      IntArray2.copy {src=mkreg (arr, a,b,c,d), dst=arr, dst_row=e, dst_col=f};
      iprint arr
    end;

  val _ = print "copy test\n";
  val _ = copytest (0,0,3,2,2,4);
  val _ = copytest (0,0,3,2,2,0);
  val _ = copytest (2,2,3,2,0,0);
  val _ = copytest (0,0,3,3,1,1);
  val _ = copytest (1,1,3,3,0,0);
  (copytest (0,0,2,1,2,~1) ; "FAIL") handle Subscript => "OK";
  (copytest (0,0,~2,1,2,1) ; "FAIL") handle Subscript => "OK";
  (copytest (0,0,2,~1,2,~1) ; "FAIL") handle Subscript => "OK";
  (copytest (0,10,2,1,2,~1) ; "FAIL") handle Subscript => "OK";

  fun copytest2 (a,b,c,d,e,f) =
    let 
      val arr = maken (6,8)
      val dst = IntArray2.array (10,10,0)
    in
      IntArray2.copy {src=mkreg (arr, a,b,c,d), dst_row=e, dst_col = f, dst=dst};
      iprint dst
    end;

  val _ = print "copy test2\n";
  val _ = copytest2 (0,0,3,2,2,4);
  val _ = copytest2 (0,0,3,2,2,0);
  val _ = copytest2 (2,2,3,2,0,0);
  val _ = copytest2 (0,0,3,3,1,1);
  val _ = copytest2 (1,1,3,3,0,0);
  (copytest2 (0,0,2,1,2,~1) ; "FAIL") handle Subscript => "OK";

  val _ = print "app test\n";
  val _ = 
    (IntArray2.app IntArray2.RowMajor (fn x => print (Int.toString x ^ " "))
       (maken (4,6));
     print "\n") ;

  val _ = 
    (IntArray2.app IntArray2.ColMajor (fn x => print (Int.toString x ^ " "))
       (maken (4,6));
     print "\n") ;

  val _ = 
    (IntArray2.appi IntArray2.RowMajor 
       (fn (i,j,x) => if i <> j then () else print (Int.toString x ^ " "))
       (allreg (maken (4, 6)));
      print "\n") ;

  val _ = 
    (IntArray2.appi IntArray2.ColMajor 
       (fn (i,j,x) => if i <> j then () else print (Int.toString x ^ " "))
       (allreg (maken (4, 6)));
      print "\n") ;

  val _ = (IntArray2.appi IntArray2.RowMajor
            (fn (i,j,x) => if i = j then () else print (Int.toString x ^ " "))
            {base = maken(4, 6), row=1,col=1, nrows=SOME 3, ncols=SOME 3};
           print "\n") ;

  val _ = (IntArray2.appi IntArray2.ColMajor
            (fn (i,j,x) => if i = j then () else print (Int.toString x ^ " "))
            {base = maken(4, 6), row=1,col=1, nrows=SOME 3, ncols=SOME 3};
           print "\n") ;


  print "modify test\n";
  val _ = 
    let
      val a = maken (4,6)
    in
      IntArray2.modifyi IntArray2.RowMajor 
        (fn (i,j,x) => if i = j then 0 else x + x) (allreg a);
      iprint a
    end;

  val _ = 
    let
      val a = maken (4,6)
    in
      IntArray2.modifyi IntArray2.RowMajor 
        (fn (i,j,x) => if i = j then 0 else x + x) (mkreg(a, 1,1,3,4));
      iprint a
    end;

  val _ = 
    let 
      val a = IntArray2.array (4, 6, 0)
      val i = ref (~1)
      fun m _ = (i:=(!i+1); !i)
    in
      print "modify RowMajor\n";
      IntArray2.modify IntArray2.RowMajor m a;
      iprint a
    end ;

  val _ = 
    let 
      val a = IntArray2.array (4, 6, 0)
      val i = ref (~1)
      fun m _ = (i:=(!i+1); !i)
    in
      print "modify ColMajor\n";
      IntArray2.modify IntArray2.ColMajor m a;
      iprint a
    end ;


  val _ = print "fold test\n";
  val fold1 = rev (IntArray2.fold IntArray2.RowMajor op:: [] (maken (4,4)));
  val fold2 = rev (IntArray2.fold IntArray2.ColMajor op:: [] (maken (4,4)));
  val fold3 = (rev (IntArray2.foldi IntArray2.RowMajor (fn _ => raise Div) []
               (mkreg (maken(4, 4), ~1,1,2,2))); "FAIL")
               handle Subscript => "OK";
  val fold4 = (rev (IntArray2.foldi IntArray2.RowMajor (fn _ => raise Div) []
               (mkreg (maken(4, 4), 100,1,2,2))); "FAIL")
               handle Subscript => "OK";
  val fold5 = (rev (IntArray2.foldi IntArray2.RowMajor (fn _ => raise Div) []
               (mkreg (maken(4, 4), 1,1,200,2))); "FAIL")
               handle Subscript => "OK";
  val fold6 = rev (IntArray2.fold IntArray2.ColMajor op:: [] (maken (4,4)));

