@(* Copyright (c) 1996 Harlequin Ltd.

Result: OK

 *
 * Test Unix OS.Path.splitDirFile.  All tests should return true.
 * 
 * Revision Log
 * ------------
 *
 * $Log$
 *
 *)

Shell.Build.loadSource "unix.__os";

open OS.Path;

val a = splitDirFile "" = {dir = "", file = ""};

val b = splitDirFile "." = {dir = "", file = "."};

val c = splitDirFile "b" = {dir = "", file = "b"};

val d = splitDirFile "b/" = {dir = "b", file = ""};

val e = splitDirFile "a/b" = {dir = "a", file = "b"};

val f = splitDirFile "/a" = {dir = "/", file = "a"};

val g = splitDirFile "/a/b" = {dir = "/a", file = "b"};

val h = splitDirFile "/c/a/b" = {dir = "/c/a", file = "b"};

val i = splitDirFile "/c/a/b/" = {dir = "/c/a/b", file = ""};

val j = splitDirFile "/c/a/b.foo.bar" = {dir = "/c/a", file = "b.foo.bar"};

val k = splitDirFile "/c/a/b.foo" = {dir = "/c/a", file = "b.foo"};
@
