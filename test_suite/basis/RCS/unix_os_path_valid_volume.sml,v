Shell.Build.loadSource "unix.__os";

open OS.Path;

val a = validVolume {isAbs=false, vol=""};

val b = validVolume {isAbs=true, vol=""};

val c = validVolume {isAbs=false, vol="/"} = false;

val d = validVolume {isAbs=true, vol="C:"} = false;

val e = validVolume {isAbs=false, vol="C:"} = false;

val f = validVolume {isAbs=true, vol=" "} = false;

val g = validVolume {isAbs=false, vol=" "} = false;
